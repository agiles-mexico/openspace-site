body {
  color: #444;
  font-family: 'dosis';
  letter-spacing: 0.4px;
  font-size: 22px;
  line-height: 34px;
  font-weight: 200;
}

h1 {
  margin: 0;
  padding: 0;
  font-family: 'dosis';
  font-size: 60px;
  line-height: 60px;
  color: #444;
  font-weight: 200;
  text-align: center;
}

h2 {
  margin: 0;
  padding: 120px 0 0 0;
  font-family: 'Ultra';
  font-size: 48px;
  line-height: 48px;
  color: #444;
  font-weight: 800;
  text-align: center;
}

h2::after {
  width: 30%;
  content: "";
  border-top: 1px solid #8D8E8D;
  margin: 24px auto;
  display: block;
}

h3 {
  margin: 30px 0 10px 0;
  padding: 0;
  font-family: 'dosis';
  font-size: 30px;
  line-height: 36px;
  color: #444;
  font-weight: 200;
  text-align: center;
}

h4 {
  margin: 20px 0 10px 0;
  padding: 0;
  font-family: 'dosis';
  font-size: 24px;
  line-height: 24px;
  color: #444;
  font-weight: 200;
}

.section {
  display: block;
  margin: 10px 30px;
}

#home {
  background: url(<% asset_path 'openspace.jpg' %>) no-repeat center center;
  background-size: cover;
}
